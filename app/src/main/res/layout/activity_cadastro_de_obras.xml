<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.activity.FormularioObrasActivities">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34sp"
        android:text="Cadastro de Obras"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/activity_formulario_obra_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@color/white"
        android:hint="Informe o nome"
        android:padding="14sp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/activity_formulario_obra_autor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:hint="Autor"
        android:padding="14sp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/activity_formulario_obra_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:hint="Data da criação"
        android:inputType="numberPassword"
        android:padding="14sp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/activity_formulario_obra_periodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:hint="Período artístico"
        android:inputType="numberPassword"
        android:padding="14sp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_cadastrar_obra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/purple_700"
        android:paddingStart="60dp"
        android:paddingEnd="60dp"
        android:text="Cadastrar"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="18sp" />


</LinearLayout>